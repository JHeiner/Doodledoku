
{
"name": "Doodledoku",
"version": "1",
"description": "Doodle on web pages, even pages with Sudoku puzzles. See the 'Options' page for more info...",
"icons": {
    "16": "pencil-16.png",
    "48": "pencil-48.png",
    "128": "pencil-128.png" },
"background": { "page": "background.html" },
"options_page": "options.html",
"browser_action": {
	"default_icon": "pencil-16.png",
	"default_title": "Toggle Doodle" },
"permissions": [ "tabs", "<all_urls>" ],
"manifest_version": 2
}

